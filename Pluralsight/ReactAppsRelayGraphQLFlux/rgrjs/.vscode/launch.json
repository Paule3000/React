    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server.js",
            "program": "${workspaceFolder}/src/server.js",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/*"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "port": 9229,
            "program": "${workspaceFolder}\\src\\server.js",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}\\dist\\*"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\src\\server.js"
        }
    ]
}